        <Button x:ConnectionId='3' x:Name="OK" Content="Ok" Margin="468,255,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.075,-0.316" Height="36" Width="124" FontSize="20" FontWeight="Bold"                />

    </Grid>
